{
    "openapi": "3.1.0",
    "paths": {},
    "info": {
        "title": "",
        "version": ""
    },
    "components": {
        "schemas": {
            "AnswerDefinition": {
                "title": "AnswerDefinition",
                "description": "An answer definition.  Possibly a choice, but also possibly a specification for how the question must be answered",
                "type": "object",
                "properties": {
                    "answerDefinitionId": {
                        "$ref": "complex-identifiers.json#/components/schemas/AnswerDefinitionIdentifier"
                    },
                    "displayText": {
                        "type": "string"
                    },
                    "value": {
                        "type": "integer"
                    },
                    "alertTier": {
                        "$ref": "simple-types.json#/components/schemas/AlertTier"
                    },
                    "action": {
                        "$ref": "#/components/schemas/Action"
                    },
                    "exportedTags": {
                        "$ref": "shared-complex-types.json#/components/schemas/Tags"
                    }
                },
                "required": [
                    "answerDefinitionId",
                    "displayText",
                    "alertTier"
                ]
            },
            "ActionType": {
                "type": "string",
                "enum": [
                    "JUMP_TO_QUESTION",
                    "NEXT_QUESTION",
                    "END_QUESTION_GROUP"
                ]
            },
            "Action": {
                "type": "object",
                "title": "Action",
                "description": "What happens when an answer is selected",
                "discriminator": {
                    "propertyName": "actionType",
                    "mapping": {
                        "JUMP_TO_QUESTION": "#/components/schemas/JumpToQuestionAction",
                        "NEXT_QUESTION": "#/components/schemas/NextQuestionAction",
                        "END_QUESTION_GROUP": "#/components/schemas/EndQuestionGroupAction"
                    }
                },
                "properties": {
                    "actionType": {
                        "$ref": "#/components/schemas/ActionType"
                    }
                },
                "required": [
                    "actionType"
                ]
            },
            "JumpToQuestionAction": {
                "title": "JumpToQuestionAction",
                "description": "Jump to a specific question",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Action"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "questionId": {
                                "$ref": "complex-identifiers.json#/components/schemas/QuestionIdentifier"
                            }
                        },
                        "required": [
                            "questionId"
                        ]
                    }
                ]
            },
            "NextQuestionAction": {
                "title": "NextQuestionAction",
                "description": "Go to the next question",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Action"
                    }
                ]
            },
            "EndQuestionGroupAction": {
                "title": "EndQuestionGroupAction",
                "description": "End the question group without asking any further questions",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Action"
                    }
                ]
            }
        }
    }
}
